<body>

<div class="game">
  <h1>♟️ Chess</h1>
  <div class="turn" id="turn">White's Turn</div>
  <div class="board" id="board"></div>
</div>

<script>
const boardElement = document.getElementById("board");
const turnText = document.getElementById("turn");

let selectedSquare = null;
let turn = "white";

const pieces = {
  r: "♜", n: "♞", b: "♝", q: "♛", k: "♚", p: "♟",
  R: "♖", N: "♘", B: "♗", Q: "♕", K: "♔", P: "♙"
};

const initialBoard = [
  "rnbqkbnr",
  "pppppppp",
  "........",
  "........",
  "........",
  "........",
  "PPPPPPPP",
  "RNBQKBNR"
];

function drawBoard() {
  boardElement.innerHTML = "";
  initialBoard.forEach((row, r) => {
    [...row].forEach((cell, c) => {
      const square = document.createElement("div");
      square.classList.add("square");
      square.classList.add((r + c) % 2 === 0 ? "white" : "black");

      square.dataset.row = r;
      square.dataset.col = c;

      if (cell !== ".") square.textContent = pieces[cell];

      square.onclick = () => handleClick(square);
      boardElement.appendChild(square);
    });
  });
}

function handleClick(square) {
  if (!selectedSquare) {
    if (square.textContent === "") return;

    const isWhitePiece = square.textContent.charCodeAt(0) <= 9817;
    if ((turn === "white" && !isWhitePiece) || (turn === "black" && isWhitePiece)) return;

    selectedSquare = square;
    square.classList.add("selected");
  } else {
    movePiece(selectedSquare, square);
    selectedSquare.classList.remove("selected");
    selectedSquare = null;
  }
}

function movePiece(from, to) {
  to.textContent = from.textContent;
  from.textContent = "";
  turn = turn === "white" ? "black" : "white";
  turnText.textContent = turn.charAt(0).toUpperCase() + turn.slice(1) + "'s Turn";
}

drawBoard();
</script>

</body>
</html>

